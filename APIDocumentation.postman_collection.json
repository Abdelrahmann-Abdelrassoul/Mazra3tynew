{
    "info": {
      "name": "API Documentation",
      "description": "Postman documentation for User Cart, Orders, Products, and Authentication APIs.",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Authentication",
        "item": [
          {
            "name": "Register User",
            "request": {
              "method": "POST",
              "header": [],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\"\n}",
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              },
              "url": {
                "raw": "{{baseUrl}}/register",
                "host": ["{{baseUrl}}"],
                "path": ["register"]
              }
            }
          },
          {
            "name": "Login User",
            "request": {
              "method": "POST",
              "header": [],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\"\n}",
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              },
              "url": {
                "raw": "{{baseUrl}}/login",
                "host": ["{{baseUrl}}"],
                "path": ["login"]
              }
            }
          },
          {
            "name": "Admin Login",
            "request": {
              "method": "POST",
              "header": [],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"adminpassword\"\n}",
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              },
              "url": {
                "raw": "{{baseUrl}}/admin-login",
                "host": ["{{baseUrl}}"],
                "path": ["admin-login"]
              }
            }
          }
        ]
      },
      {
        "name": "User Cart",
        "item": [
          {
            "name": "Add to Cart",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{userToken}}",
                  "type": "text"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"userId\": \"USER_ID\",\n  \"itemId\": \"ITEM_ID\"\n}",
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              },
              "url": {
                "raw": "{{baseUrl}}/add-to-cart",
                "host": ["{{baseUrl}}"],
                "path": ["add-to-cart"]
              }
            }
          },
          {
            "name": "Update Cart",
            "request": {
              "method": "PUT",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{userToken}}",
                  "type": "text"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"userId\": \"USER_ID\",\n  \"itemId\": \"ITEM_ID\",\n  \"quantity\": 2\n}",
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              },
              "url": {
                "raw": "{{baseUrl}}/update-cart",
                "host": ["{{baseUrl}}"],
                "path": ["update-cart"]
              }
            }
          },
          {
            "name": "Get User Cart",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{userToken}}",
                  "type": "text"
                }
              ],
              "url": {
                "raw": "{{baseUrl}}/get-cart?userId=USER_ID",
                "host": ["{{baseUrl}}"],
                "path": ["get-cart"],
                "query": [
                  {
                    "key": "userId",
                    "value": "USER_ID"
                  }
                ]
              }
            }
          }
        ]
      },
      {
        "name": "Orders",
        "item": [
          {
            "name": "Place Order",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{userToken}}",
                  "type": "text"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"userId\": \"USER_ID\",\n  \"items\": [{\"itemId\": \"ITEM_ID\", \"quantity\": 1}],\n  \"amount\": 100,\n  \"address\": \"123 Test St\"\n}",
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              },
              "url": {
                "raw": "{{baseUrl}}/place-order",
                "host": ["{{baseUrl}}"],
                "path": ["place-order"]
              }
            }
          },
          {
            "name": "All Orders (Admin)",
            "request": {
              "method": "GET",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{adminToken}}",
                  "type": "text"
                }
              ],
              "url": {
                "raw": "{{baseUrl}}/all-orders",
                "host": ["{{baseUrl}}"],
                "path": ["all-orders"]
              }
            }
          },
          {
            "name": "Update Order Status",
            "request": {
              "method": "PUT",
              "header": [
                {
                  "key": "Authorization",
                  "value": "Bearer {{adminToken}}",
                  "type": "text"
                }
              ],
              "body": {
                "mode": "raw",
                "raw": "{\n  \"orderId\": \"ORDER_ID\",\n  \"status\": \"Delivered\"\n}",
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              },
              "url": {
                "raw": "{{baseUrl}}/update-status",
                "host": ["{{baseUrl}}"],
                "path": ["update-status"]
              }
            }
          }
        ]
      }
    ]
  }
  